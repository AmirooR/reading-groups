<% provide(:title, "All Groups") %>

    <% if @groups.any? %>
	 <div class="row"> 
	  <div class="span4 offset1">
	  <%= form_tag groups_path, :method => :get, remote: true, class: "form-horizontal form-inline form-search", role:"form" do %>
		<div class="form-group">
		    <!-- %= label_tag :search, "Name" % --> 
		    <%= text_field_tag :search, params[:search], class: "input-large search-query", placeholder: "Search Group name" %>
		    <!-- %= submit_tag "Search", :name => nil, class: "form-control btn btn-info" % -->
		</div>
	  <% end %>
	  </div>
	 </div>
<div class="row">
  <div class="span12">
	  <%= will_paginate %>
		<h1> All groups </h1>
			<table class="table table-striped table-hover table-condensed">
				<thead>
					<tr>
						<th> Name </th>
						<th> Book </th>
						<th> Description </th>
						<th> #pages </th>
						<!-- th> Start date </th -->
						<!-- th> End date </th -->
						<th> #members </th>
						<th> Owner </th>
						<th> </th>
					</tr>
				</thead>
				<tbody id="groups">
				
			<!-- ul class="groups" -->
					<%= render @groups %>
			<!-- /ul -->
				</tbody>
			</table>

	  <%= will_paginate %>
  </div>
</div>
<% end %>

<div style="margin-top: 20px">
<%= link_to 'New Group', new_group_path, class:"btn btn-success btn-primary" %>
</div>
