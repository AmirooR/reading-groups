<div class="row">
 <div class="span5">
<h3>New comment</h3>

<%= form_for([@comment.group,@comment]) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
     <div class="alert alert-error">
      The form contains <%= pluralize(@comment.errors.count, "error") %>.
     </div>
      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li>* <%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
	<%= f.label :page_number, "Comment for page" %>
	<% unless @current_comment_page.present? %>
		<% @current_comment_page = 1 %>
	<% end %>
			
	<%= f.number_field :page_number, value: @current_comment_page, class: "span2" %>
  </div>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body, rows: 8 %>
  </div>
  <div class="field">
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  <div class="actions">
    <%= f.submit "Create", class: "btn" %>
  </div>
<% end %>

 </div>
</div>
