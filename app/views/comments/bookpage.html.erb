<h1>Listing comments</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th>Page</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.title %></td>
        <td><%= comment.body %></td>
        <td><%= comment.user.login %></td>
        <td><%= comment.page_number %></td>
        <td><%= link_to 'Show', [comment.group, comment] %></td>
        <td><%= link_to 'Edit', edit_group_comment_path(comment.group, comment) %></td>
        <td><%= link_to 'Destroy', [comment.group, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

